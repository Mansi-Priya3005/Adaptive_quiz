model User {
  id       Int      @id @default(autoincrement())
  name     String
  attempts Attempt[]
}

model Question {
  id         Int      @id @default(autoincrement())
  text       String
  difficulty String
  attempts   Attempt[]
}

model Attempt {
  id         Int      @id @default(autoincrement())
  isCorrect  Boolean
  userId     Int
  questionId Int

  user     User     @relation(fields: [userId], references: [id])
  question Question @relation(fields: [questionId], references: [id])
}
